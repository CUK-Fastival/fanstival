<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fanstival.mapper.BoardMapper">

    <select id="getAllBoards" resultType="fanstival.domain.Board">
        SELECT *
        FROM board
    </select>

    <select id="getBoardById" parameterType="int" resultType="fanstival.domain.Board">
        SELECT *
        FROM board
        WHERE board_id = #{board_id}
    </select>

    <insert id="createBoard" parameterType="fanstival.domain.Board">
        INSERT INTO board (writer, title, content, regdate)
        VALUES (#{writer}, #{title}, #{content}, now())
    </insert>

    <update id="updateBoard" parameterType="fanstival.domain.Board">
        UPDATE board
        SET title = #{title},
            content = #{content},
            updatedate = now()
        WHERE board_id = #{board_id}
    </update>

    <update id="deleteBoard" parameterType="int">
        UPDATE board
        SET deletedate = now()
        WHERE board_id = #{board_id}
    </update>

</mapper>
